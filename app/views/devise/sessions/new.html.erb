<h2 class="title is-2">Login</h2>
  <div class="box">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, class: "input is-primary", placeholder: "Email..." %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", class: "input is-primary", placeholder: "Password..." %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "checkbox"   %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", :class => "button is-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
