<!DOCTYPE html>
<html>
  <head>
    <title>Novaac</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container is-widescreen">
      <nav class="navbar is-transparent">
        <div class="navbar-brand">
          <a class="navbar-item" href="/">
            <img src="https://bulma.io/images/bulma-logo.png" alt="NoVa Anonymous Counseling" width="112" height="28">
          </a>
          <div class="navbar-burger burger" data-target="navbarExampleTransparentExample">
            <span></span>
            <span></span>
            <span></span>
          </div>
        </div>

        <div id="navbarExampleTransparentExample" class="navbar-menu">
          <div class="navbar-start">
            <a class="navbar-item" href="/">
              Home
            </a>
            <a class="navbar-item" href="/">
              About
            </a>
          </div>

          <div class="navbar-end">
            <div class="navbar-item">
              <div class="field is-grouped">
                <% if user_signed_in? %>
                  <p class="control">
                    <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "button is-info") %>
                  </p>
                <% else %>
                  <p class="control">
                    <%= link_to('Login', new_user_session_path, class: "button is-info") %>
                  </p>
                  <p class="control">
                    <%= link_to('Register', new_user_registration_path, class: "button is-info") %>
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
